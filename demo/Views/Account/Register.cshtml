
@model presentationLayer_Controller.VMs.Account.RegisterVMs
@{
    ViewBag.Title ="Register";
    Layout = "_Layout";
}
<div class="main">
    <!-- Sign up form -->
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Sign up</h2>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            @Html.TextBox("name", null, new { placeholder = "Your Name", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="email"><i class="zmdi zmdi-email"></i></label>
                            @Html.TextBox("email", null, new { placeholder = "Your Email", type = "email", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                            @Html.Password("pass", null, new { placeholder = "Password", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="re_pass"><i class="zmdi zmdi-lock-outline"></i></label>
                            @Html.Password("re_pass", null, new { placeholder = "Repeat your password", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                            <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in <a href="#" class="term-service">Terms of service</a></label>
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                        </div>
                    }
                </div>
                <div class="signup-image">
                    <figure><img src="@Url.Content("~/images/signup-image.jpg")" alt="sign up image"></figure>
                    <a href="#" class="signup-image-link">I am already member</a>
                </div>
            </div>
        </div>
    </section>

</div>